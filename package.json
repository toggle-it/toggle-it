{
  "name": "toggle-it",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --no-daemon",
    "lint": "turbo run lint --no-daemon",
    "build": "turbo run build --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md,scss}\"",
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf .turbo node_modules .next dist coverage",
    "nest": "cd apps/api && nest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,scss}": [
      "pnpm format",
      "pnpx lint"
    ]
  },
  "devDependencies": {
    "@ti/eslint-config": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.0"
}
