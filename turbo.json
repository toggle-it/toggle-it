{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEST_API_PORT",
    "NEST_JWT_SECRET",
    "NEST_MONGODB_URI",
    "NEST_ENABLE_SWAGGER_UI",
    "NEST_MAX_REQUESTS_PER_MINUTE"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false
    }
  }
}
